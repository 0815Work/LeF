<mvc:View controllerName="LeF.controller.appendix.Appendix"
	      xmlns:form="sap.ui.layout.form"
		  xmlns="sap.m"
		  xmlns:mvc="sap.ui.core.mvc">
	<Page title="({i18n>AA}) {i18n>AATitle}"
		  showNavButton="true"
		  navButtonPress="onNavReturn"
		  class="sapUiResponsiveContentPadding">
		<content>
			<VBox>
				<Text text="{i18n>AADesc01}" />
				<Text text="{i18n>AADesc02}" class="sapUiTinyMarginTop" />
				<Label text="{i18n>AALabel} 1:" design="Bold" class="sapUiSmallMarginTop"/>
				<TextArea id="goal1" placeholder="{i18n>AAExcample}" growing="true" width="100%"/>
				<TextArea id="remark1" placeholder="{i18n>AARemark}" growing="true" width="100%"/>
				
				<Label text="{i18n>AALabel} 2:" design="Bold" class="sapUiSmallMarginTop"/>
				<TextArea id="goal2" growing="true" width="100%"/>
				<TextArea id="remark2" placeholder="{i18n>AARemark}" growing="true" width="100%"/>
				
				<Label text="{i18n>AALabel} 3:" design="Bold" class="sapUiSmallMarginTop"/>
				<TextArea id="goal3" growing="true" width="100%"/>
				<TextArea id="remark3" placeholder="{i18n>AARemark}" growing="true" width="100%"/>
				
				<Label text="{i18n>AALabel} 4:" design="Bold" class="sapUiSmallMarginTop"/>
				<TextArea id="goal4" growing="true" width="100%"/>
				<TextArea id="remark4" placeholder="{i18n>AARemark}" growing="true" width="100%"/>
			</VBox>
		</content>
	</Page>
</mvc:View>
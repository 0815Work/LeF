<mvc:View xmlns="sap.m"
		  xmlns:form="sap.ui.layout.form"
		  xmlns:mvc="sap.ui.core.mvc">
	<VBox>
		<Text text="{1/titel}" class="qTitle"/>
		<Text text="{1/besch}" />
		<form:SimpleForm editable="true" layout="ResponsiveGridLayout" columnsL="12" columnsM="12" labelSpanL="12" labelSpanM="12">
			<Label text="{i18n>Q2_1}" />
			<TextArea id="q2_1" growing="true" width="100%"/>
			<Label text="{i18n>Q2_2}" />
			<TextArea id="q2_2" growing="true" width="100%"/>
		</form:SimpleForm>
		<Text text="{i18n>Q2_3}" class="qTitle"/>
		<form:SimpleForm editable="true">
			<RadioButtonGroup width="100%" columns="4">
				<buttons>
					<RadioButton groupName="evalChois2" text="{i18n>ja}" />
					<RadioButton groupName="evalChois2" text="{i18n>nein}" />
				</buttons>
			</RadioButtonGroup>
		</form:SimpleForm>
		<form:SimpleForm editable="true" layout="ResponsiveGridLayout" columnsL="12" columnsM="12" labelSpanL="12" labelSpanM="12">
			<Label text="{i18n>Q2_4}" />
			<TextArea id="q2_4" growing="true" width="100%"/>
			<Label text="{i18n>Q2_5}" />
			<TextArea id="q2_5" growing="true" width="100%"/>
		</form:SimpleForm>
	</VBox>
</mvc:View>